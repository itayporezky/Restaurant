@page "{restaurantId:int}"
@model Bite.Pages.Restaurants.DetailModel
@{
    ViewData["Title"] = "Detail";
}

@if (Model.Message != null)
{
    <div class="alert-info">@Model.Message</div>
}

<h1>@Model.Restaurant.Name</h1>

<div>
    ID: @Model.Restaurant.Id
</div>
<div>
    Location: @Model.Restaurant.Location
</div>
<div>
    Location: @Model.Restaurant.Cuisine
</div>

<a class="btn btn-primary" asp-page="./List">All Restaurants</a>
